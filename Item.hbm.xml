<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="tinne.Item" table="ITEMS">
      <id name="ID" type="int" column="ID">
         <generator class="native"/>
      </id>
      <set name="MenuContainer" cascade="all">
         <key column="item_id"/>
         <one-to-many class="tinne.Category"/>
      </set>
      <property name="Title" column="Title" type="string"/>
      <property name="Description" column="Description" type="string"/>
      <property name="Cost" column="Cost" type="float"/>
   </class>

   <class name="tinne.Category" table="CATEGORY">
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="CategoryName" column="CategoryName" type="string"/>
   </class>

</hibernate-mapping>
