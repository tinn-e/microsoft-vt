<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
"http://localhost:8080/MENU/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="menu.Item" table="items">
      <id name="itemID" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="itemTitle" column="prodTitle" type="string"/>
      <property name="itemDesc" column="prodDesc" type="string"/>
      <property name="itemCost" column="prodCost" type="int"/>
      <property name="itemCategory" column="prodCategory" type="string"/>
   </class>
</hibernate-mapping>
